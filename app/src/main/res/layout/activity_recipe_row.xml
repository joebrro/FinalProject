<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentLocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe ID goes here" />

    <TextView
        android:id="@+id/recipe_txtViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title goes here" />

    <TextView
        android:id="@+id/recipe_txtViewSourceURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL source goes here" />

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Image goes here" />

    <TextView
        android:id="@+id/recipe_txtViewImage_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image URL goes here" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="delete"
        android:textSize="12dp" />

    <Button
        android:id="@+id/saveRecipeButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="add to favourite"
        android:layout_toRightOf="@+id/deleteButton"
        android:textSize="12dp" />


</LinearLayout>